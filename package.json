{
  "name": "cmdetect-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "CMDetect Healthcare Application Monorepo",
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "test": "jest",
    "test:permissions": "jest tests/permissions",
    "test:watch": "jest --watch",
    "test:users": "pnpm --filter @cmdetect/auth-server seed:users",
    "clean": "turbo run clean",
    "type-check": "turbo run type-check",
    "lint": "turbo run lint",
    "auth:dev": "pnpm --filter @cmdetect/auth-server dev",
    "auth:migrate": "pnpm --filter @cmdetect/auth-server migrate",
    "frontend:dev": "pnpm --filter @cmdetect/frontend dev",
    "hasura:console": "cd apps/hasura && hasura console",
    "setup": "pnpm install && pnpm build:deps",
    "build:deps": "pnpm --filter @cmdetect/shared-types build && pnpm --filter @cmdetect/config build"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.19.11",
    "@types/pg": "^8.15.5",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.6.1",
    "eslint": "^8.57.1",
    "graphql": "^16.11.0",
    "graphql-request": "^6.1.0",
    "jest": "^29.7.0",
    "pg": "^8.16.3",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.1",
    "tsx": "^3.14.0",
    "turbo": "^1.13.4",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}