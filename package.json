{
  "name": "cmdetect-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "CMDetect Healthcare Application Monorepo",
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "test": "jest",
    "test:permissions": "jest tests/permissions",
    "test:watch": "jest --watch",
    "test:users": "pnpm --filter @cmdetect/auth-server seed:users",
    "clean": "turbo run clean",
    "type-check": "turbo run type-check",
    "lint": "turbo run lint",
    "auth:dev": "pnpm --filter @cmdetect/auth-server dev",
    "auth:migrate": "pnpm --filter @cmdetect/auth-server migrate",
    "frontend:dev": "pnpm --filter @cmdetect/frontend dev",
    "hasura:console": "cd apps/hasura && hasura console",
    "setup": "pnpm install && pnpm build:deps",
    "build:deps": "pnpm --filter @cmdetect/config build"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.1",
    "@types/pg": "^8.15.5",
    "bcrypt": "^6.0.0",
    "dotenv": "^17.2.2",
    "eslint": "^9.35.0",
    "graphql": "^16.11.0",
    "graphql-request": "6.1.0",
    "jest": "^30.1.3",
    "pg": "^8.16.3",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.1",
    "tsx": "^4.20.5",
    "turbo": "^2.5.6",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}