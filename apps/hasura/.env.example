# =============================================================================
# HASURA DOCKER .ENV
# =============================================================================
# This file is specifically for Hasura's Docker Compose environment.
# Variables here are used only by the Docker containers.
# All variables are validated via @cmdetect/config schemas.
# =============================================================================

# PostgreSQL password for Docker container
POSTGRES_PASSWORD=your-postgres-password

# Database URL for Hasura (Docker internal networking)
# Note: Uses 'postgres' hostname (Docker service name), not 'localhost'
DB_URL=postgresql://postgres:your-postgres-password@postgres:5432/postgres

# Hasura admin secret (must match root .env)
HASURA_ADMIN_SECRET=your-secret-minimum-32-characters
HASURA_GRAPHQL_ADMIN_SECRET=your-secret-minimum-32-characters

# JWT configuration for Better Auth (must match root .env)
# Note: Uses 'host.docker.internal' to access host machine from Docker
HASURA_GRAPHQL_JWT_SECRET={"jwk_url":"http://host.docker.internal:3001/api/auth/jwks"}

# Unauthorized role for public/anonymous access
HASURA_GRAPHQL_UNAUTHORIZED_ROLE=public
