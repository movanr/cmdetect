{
  "name": "@cmdetect/auth-server",
  "version": "1.0.0",
  "description": "Authentication server built with Better Auth for CMDetect",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon --exec tsx src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "lint": "eslint src scripts",
    "migrate": "npx @better-auth/cli migrate",
    "seed:users": "tsx scripts/seed-all-test-users.ts",
    "seed:users:cleanup": "tsx scripts/seed-all-test-users.ts cleanup"
  },
  "type": "commonjs",
  "dependencies": {
    "@cmdetect/config": "workspace:*",
    "better-auth": "^1.3.9",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^7.0.6",
    "pg": "^8.16.3",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.3.1",
    "@types/nodemailer": "^7.0.1",
    "@types/pg": "^8.15.5",
    "@types/uuid": "^10.0.0",
    "nodemon": "^3.1.10",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  }
}