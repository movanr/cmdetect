# Node Environment
NODE_ENV=development

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/cmdetect
HASURA_DATABASE_URL=postgresql://postgres:postgres@localhost:5432/cmdetect_app

# JWT Keys (generate with: openssl genrsa -out private.pem 2048 && openssl rsa -in private.pem -pubout -out public.pem)
JWT_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----"
JWT_PUBLIC_KEY="-----BEGIN PUBLIC KEY-----\n...\n-----END PUBLIC KEY-----"

# Service URLs
AUTH_SERVER_URL=http://localhost:3001
HASURA_GRAPHQL_ENDPOINT=http://localhost:8080/v1/graphql
FRONTEND_URL=http://localhost:3000

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Hasura Admin Secret
HASURA_GRAPHQL_ADMIN_SECRET=your-admin-secret