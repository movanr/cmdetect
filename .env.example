# =============================================================================
# ROOT .ENV - Primary configuration file for development
# =============================================================================
# This is the main .env file. Copy to .env and fill in your values.
# All environment variables are validated using Zod schemas in @cmdetect/config
# =============================================================================

# Node Environment
NODE_ENV=development

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL connection for Better Auth
DATABASE_URL=postgresql://postgres:your-password@localhost:5432/postgres

# PostgreSQL connection for Hasura (can be same as DATABASE_URL)
HASURA_DATABASE_URL=postgresql://postgres:your-password@localhost:5432/postgres

# =============================================================================
# SERVICE URLS
# =============================================================================

# Auth server URL (for Better Auth and JWT JWKS endpoint)
AUTH_SERVER_URL=http://localhost:3001

# Frontend application URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Hasura GraphQL endpoint
HASURA_GRAPHQL_ENDPOINT=http://localhost:8080/v1/graphql

# Hasura endpoint for tests (same as above for local dev)
HASURA_TEST_ENDPOINT=http://localhost:8080/v1/graphql

# =============================================================================
# HASURA CONFIGURATION
# =============================================================================

# Hasura admin secret (minimum 32 characters)
HASURA_GRAPHQL_ADMIN_SECRET=your-secret-minimum-32-characters

# Hasura JWT secret configuration (JWKS endpoint)
HASURA_GRAPHQL_JWT_SECRET={"jwk_url":"http://host.docker.internal:3001/api/auth/jwks"}

# Hasura unauthorized role (for public access)
HASURA_GRAPHQL_UNAUTHORIZED_ROLE=public

# =============================================================================
# BETTER AUTH CONFIGURATION
# =============================================================================

# Better Auth session secret (minimum 32 characters)
BETTER_AUTH_SECRET=your-secret-minimum-32-characters

# =============================================================================
# EMAIL / SMTP CONFIGURATION
# =============================================================================

# SMTP server configuration for email verification
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@yourdomain.com
